<div class="flex font-mono py-2 border-t-2">
  <div class="w-1/3">
    {{#each this.srcTokens as |token|}}
      <Token @value={{token.value}} @type={{token.type}} />
    {{/each}}
  </div>

  <div class="w-1/3">
    {{#each @evaluation.vals as |val index|}}
      <div class="flex justify-end">
        <div class="pr-2">
          {{get @interpreter.program.refs index}} = {{val}} =
        </div>
        <IntegerBits @number={{val}} />
      </div>
    {{/each}}
  </div>

  <div class="w-1/3">
    {{#each @evaluation.visuals as |visual|}}
      <div class="flex justify-end">
        <div class="pr-2">
          {{visual.op}}
          {{visual.ref}}
        </div>
        <IntegerBits @number={{visual.val}} />
      </div>
    {{/each}}
  </div>
</div>
