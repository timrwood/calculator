<div class="flex font-mono py-2 border-t-2">
  <div class="w-1/3">
    {{#each-in @evaluation.re as |key value|}}
      <span class="text-red-600">{{key}}</span>
      <span class="text-slate-400">=</span>
      <span class={{this.isClassName}}>{{value}}</span>
    {{/each-in}}
  </div>

  <div class="w-1/6">
    ({{join ' ' @evaluation.op}})
  </div>

  <div class="w-1/6">
    <span class="text-red-600">{{@evaluation.as}}</span>
    <span class="text-slate-400">=</span>
    <span class={{this.isClassName}}>{{@evaluation.is}}</span>
  </div>

  <div class="w-1/3">
    {{#if this.firstArg}}
      <IntegerBits @number={{this.firstArg}} @prefix={{this.firstArgPrefix}} @onColor="text-slate-600" @offColor="text-slate-300" />
    {{/if}}
    {{#if this.secondArg}}
      <IntegerBits @number={{this.secondArg}} @prefix={{this.secondArgPrefix}} @onColor="text-slate-600" @offColor="text-slate-300" />
    {{/if}}
    <IntegerBits @number={{@evaluation.is}} @prefix="=" @onColor="text-blue-800" @offColor="text-blue-300" />
  </div>
</div>
