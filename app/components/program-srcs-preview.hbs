<div class="p-8 bg-white border-2 border-slate-200 rounded-2xl relative">
  <strong class="block pb-2">SRCS</strong>
  <div class="grid gap-x-3 grid-cols-[auto_1fr]">
    {{#each @execution.prog.stps as |step|}}
      <div class="grid grid-cols-subgrid col-span-2 relative">
        <div class="col-start-1 text-right text-slate-300">{{step.num}}</div>
        <SrcPreview @src={{step.src}} />
        <div class="absolute top-0 right-0 text-red-500">
          {{#each step.err as |err|}}
            <div>{{err}}</div>
          {{/each}}
        </div>
      </div>
    {{/each}}
  </div>

  {{yield}}
</div>
