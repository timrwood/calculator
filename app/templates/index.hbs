<div class="p-8 py-16 space-y-8 font-mono">
  <div class="text-4xl font-bold text-center">
    CALCULATOR
  </div>

  <div class="flex justify-center p-32 gap-4 bg-white border-2 border-slate-200 rounded-2xl relative">
    <div class="w-72">
      <input class="border-b-4 h-24 px-3 text-5xl w-full border-slate-200 appearance-none" value={{this.x}} {{on "input" this.setX}} type="number" pattern="\d+" />
    </div>

    <div class="grid grid-cols-2 grid-rows-2 w-24 h-24 shrink-0 gap-2">
      {{#each this.operations as |operation|}}
        <button class="border-4 border-slate-200 flex items-center justify-center text-3xl {{if (eq this.operation operation.value) 'text-slate-600 bg-slate-200' 'text-slate-200'}}" type="button" {{on "click" (fn this.setOperation operation.value)}}>
          {{operation.label}}
        </button>
      {{/each}}
    </div>

    <div class="w-72">
      <input class="border-b-4 h-24 px-3 text-5xl w-full border-slate-200 appearance-none" value={{this.y}} {{on "input" this.setY}} type="number" pattern="\d+" />
    </div>

    <div class="text-nowrap text-5xl py-6 w-72">
      =
      {{this.interpreter.program.retn}}
    </div>

    <ToggleReveal @active={{this.showingSrcs}} @callback={{fn this.setReveal 1}} @name="Source" />
  </div>

  <div class="flex gap-4">
    <div class="w-1/3">
      {{#if this.showingSrcs}}
        <ProgramSrcsPreview @program={{this.interpreter.program}}>
          <ToggleReveal @active={{this.showingCmds}} @callback={{fn this.setReveal 2}} @name="Commands" />
        </ProgramSrcsPreview>
      {{/if}}
    </div>
    <div class="w-2/3">
      {{#if this.showingCmds}}
        <ProgramCmdsPreview @program={{this.interpreter.program}}>
          <ToggleReveal @active={{this.showingArgs}} @callback={{fn this.setReveal 3}} @name="Args" />
        </ProgramCmdsPreview>
      {{/if}}
    </div>
  </div>


  {{#if this.showingArgs}}
    <ProgramArgsPreview @program={{this.interpreter.program}}>
      <ToggleReveal @active={{this.showingSteps}} @callback={{fn this.setReveal 4}} @name="Steps" />
    </ProgramArgsPreview>

    <div class=" text-center text-slate-400">
      Computed in {{this.interpreter.evaluations.length}} instructions in {{this.interpreter.runtime}}ms
    </div>
  {{/if}}

  {{#if this.showingSteps}}
    <InterpreterPreview @interpreter={{this.interpreter}} />
  {{/if}}
</div>
